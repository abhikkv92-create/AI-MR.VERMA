FROM python:3.11-slim

WORKDIR /app

COPY requirements.collector.txt .
RUN pip install --no-cache-dir -r requirements.collector.txt

COPY *.py .

HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD python -c "import requests; exit(0 if requests.get('http://localhost:8550/health').status_code == 200 else 1)"

EXPOSE 8550
CMD ["gunicorn", "-w", "2", "-b", "0.0.0.0:8550", "--timeout", "180", "interaction_collector:app"]
