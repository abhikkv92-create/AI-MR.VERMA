# MR.VERMA Environment Configuration
# Copy this file to .env and fill in your values

# Platform Configuration
VERMA_PLATFORM=auto
VERMA_VERSION=2.0.0
VERMA_ENV=development

# OPENCODE Integration
OPENCODE_ENABLED=true
OPENCODE_API_ENDPOINT=/api/v1/opencode
OPENCODE_AUTO_REGISTER=true

# TRAE.AI Integration  
TRAE_AI_ENABLED=true
TRAE_AI_API_ENDPOINT=/api/v1/traeai
TRAE_AI_AUTO_REGISTER=true

# Agent Configuration
AGENTS_AUTO_START=true
AGENTS_MAX_CONCURRENT=10
AGENT_TIMEOUT=300

# Skills Configuration
SKILLS_AUTO_LOAD=true
SKILLS_DIRECTORY=./plantskills/workflows

# Workflow Configuration
WORKFLOWS_AUTO_START=true
WORKFLOWS_PARALLEL_EXECUTION=true

# Spider Web Configuration
SPIDER_WEB_SYNC_ENABLED=true
SPIDER_WEB_HARMONY_MODE=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=console

# Performance
POWERUSAGE_LEVEL=3
MEMORY_OPTIMIZATION=true
TOKEN_EFFICIENCY=true

# Docker Configuration (for local mode)
DOCKER_ENABLED=true
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=verma-network

# Ports (for local mode)
PORT_DASHBOARD=8551
PORT_ASSISTANT=8550
PORT_API=8552

# Security
SECURITY_AUDIT_ENABLED=true
VULNERABILITY_SCANNING=true

# Integration Endpoints
INTEGRATION_GITHUB=true
INTEGRATION_GITLAB=false
INTEGRATION_SLACK=false
INTEGRATION_DISCORD=false
