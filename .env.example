# MR.VERMA Environment Configuration
# Copy this file to .env and fill in your values

# Platform Configuration
VERMA_PLATFORM=auto
VERMA_VERSION=2.0.0
VERMA_ENV=development

# OPENCODE Integration
OPENCODE_ENABLED=true
OPENCODE_API_ENDPOINT=/api/v1/opencode
OPENCODE_AUTO_REGISTER=true

# TRAE.AI Integration  
TRAE_AI_ENABLED=true
TRAE_AI_API_ENDPOINT=/api/v1/traeai
TRAE_AI_AUTO_REGISTER=true

# Agent Configuration
AGENTS_AUTO_START=true
AGENTS_MAX_CONCURRENT=10
AGENT_TIMEOUT=300

# Skills Configuration
SKILLS_AUTO_LOAD=true
SKILLS_DIRECTORY=./plantskills/workflows

# Workflow Configuration
WORKFLOWS_AUTO_START=true
WORKFLOWS_PARALLEL_EXECUTION=true

# Spider Web Configuration
SPIDER_WEB_SYNC_ENABLED=true
SPIDER_WEB_HARMONY_MODE=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=console

# Performance
POWERUSAGE_LEVEL=3
MEMORY_OPTIMIZATION=true
TOKEN_EFFICIENCY=true

# Docker Configuration (for local mode)
DOCKER_ENABLED=true
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=verma-network

# Ports (for local mode)
PORT_DASHBOARD=8551
PORT_ASSISTANT=8550
PORT_API=8552

# Security
SECURITY_AUDIT_ENABLED=true
VULNERABILITY_SCANNING=true

# HPIE - High-Performance Intelligence Engine
HPIE_ENABLED=true
HPIE_CACHE_CAPACITY=256
HPIE_OBJECT_POOL_SIZE=64
HPIE_CIRCUIT_BREAKER_THRESHOLD=5
HPIE_CONFIDENCE_THRESHOLD=0.6
HPIE_ENCRYPTION_ENABLED=true
HPIE_RATE_LIMIT_MAX=60
HPIE_RATE_LIMIT_REFILL=10
HPIE_CONSENSUS_ENABLED=true
HPIE_ANTIGRAVITY_ENABLED=false

# Code Quality / Lint Enforcement
LINT_ENFORCEMENT=strict
LINT_AUTO_FIX=true
LINT_THRESHOLD=100
LINT_MAX_ERRORS=0
LINT_MAX_WARNINGS=50
LINT_MIN_SCORE=80

# Google Anti-Gravity Platform
GOOGLE_ANTIGRAVITY_ENV=
GAG_REPLICATION_FACTOR=3
GAG_PARTITION_STRATEGY=consistent-hash
GAG_HEALTH_PORT=8553

# Integration Endpoints
INTEGRATION_GITHUB=true
INTEGRATION_GITLAB=false
INTEGRATION_SLACK=false
INTEGRATION_DISCORD=false
